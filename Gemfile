source 'https://rubygems.org'

# Latest Ruby
#ruby '2.0.0'

# Web server
gem 'puma'

# Simple HTTP
gem 'sinatra'

# Better templating
gem 'sinatra-content-for2', require: 'sinatra/content_for2'

# Faster ERB
gem 'erubis'

# Use the right host
gem 'rack-canonical-host'

# Asset pipeline
gem 'sprockets'

# Stylesheets
gem 'sass'
gem 'sprockets-sass'
gem 'bourbon'
gem 'grater'

gem 'sinatra-basic-auth'
group :development do
  # Reloading in development
  gem 'shotgun'
end
